{
	"printWidth": 80,
	"singleQuote": true,
	"trailingComma": "es5",
	"bracketSpacing": true,
	"tabWidth": 2,
	"semi": true,
	"arrowParens": "always",
	"overrides": [
		{
			"files": "*.json",
			"options": {
				"singleQuote": false
			}
		},
		{
			"files": ".*rc",
			"options": {
				"singleQuote": false,
				"parser": "json"
			}
		}
	]
}